<div class="row panel large-12">
	<h6> Create a New Coupon </h6>
</div>
<br/>

<div class="row large-12">
	<%= form_for(@coupon, :method => "post", :url => {:action => "create"}) do |f| %>


		<div class="row">
		  <div class="small-3 large-6 columns">
		  	<%=f.label :name%>
			<%=f.text_field :name%>
		  </div>
		  <div class="small-4 large-6 columns">
		  	<%=f.label "Coupon Code"%>
			<%=f.text_field :code%>
		  </div>
		</div>

		<div class="row">
		  <div class="small-3 large-6 columns">
			<%=f.label "Coupon Discount"%>
			<%=f.text_field :discount%>
		  </div>
		  <div class="small-4 large-6 columns">
			<%=f.label "Description"%>
			<%=f.text_field :description%>
		  </div>
		</div>

		<div class="row">
		  <div class="small-3 large-6 columns">
			<%=f.label "Description"%>
			<%=f.text_field :description%>
		  </div>
		  <div class="small-4 large-6 columns">
			
			<%=f.label "Start Date"%>
			<%=f.text_field :start_date, :class => "date" %>
		  </div>
		</div>
	
		<p>
			<%=f.submit "Create", :class => "button btn" %>
		</p>
	<% end %>
</div>		