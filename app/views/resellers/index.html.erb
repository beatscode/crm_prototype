<h1>All Resellers (<%=Reseller.count%>)</h1>
<table>
  <thead>
    <tr>
      <th width="200">Reseller Name</th>
      <th>Website</th>
      <th width="150">Marketing Type</th>
      <th width="150">Checkout Type</th>
    </tr>
  </thead>
   <tbody>
		<% @resellers.each do |r| %>
		 <tr>
			<td><%=link_to image_tag( r.logo_url ), edit_reseller_path(r), :title => r.name %></td>
			<td><%=link_to "Website", r.website , :target => "_blank" %></td>
			<td><%=r.marketing_type%></td>
			<td><%=r.checkout_type%></td>
		 </tr>
		<% end %>
	</tbody>
</table>
