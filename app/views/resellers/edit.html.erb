<div class="row panel large-12 small-12 columns">
	<h6>Editing Reseller <%= @reseller.name %></h6>
</div>
<br/>

<div class="row large-12 small-12 columns">
	<%= simple_form_for(@reseller, :url => {:action => 'update'}) do |f| %>

		<%=f.hidden_field :id %>

	<%= f.hidden_field :installed, :value => "0" %>
	<%= f.hidden_field :marketing_type, :value => "whitelabel" %>
	<%= f.hidden_field :logo, :value => "" %>
	<%= f.hidden_field :theme, :value => "" %>
	<%= f.hidden_field :bundle_type, :value => "traditional" %>

	<div class="row small-12">
	  <div class="small-12 large-6 columns">
	  	<%=f.label :name%>
		<%=f.text_field :name%>
	  </div>
	  <div class="small-12 large-6 columns">
	  	<%=f.label "Application Domain"%>
		<%=f.text_field :appDomain%>
	  </div>
	</div>

	<div class="row small-12">
	  <div class="small-12 large-6 columns">
		<%=f.label "Bundle Url"%>
		<%=f.text_field :bundleurl%>
	  </div>
	  <div class="small-12 large-6 columns">
		<%=f.label "Bundle Name"%>
		<%=f.text_field :bundlename%>
	  </div>
	</div>


	<div class="row">
	  <div class="small-12 large-6 columns">
		<%=f.label "White Label Folder"%>
		<%=f.text_field :wl_folder%>
	  </div>
	  <div class="small-12 large-6 columns">
		<%=f.label "Product Name"%>
		<%=f.text_field :product_name%>
	  </div>
	</div>


	<div class="row">
	  <div class="small-12 large-6 columns">
		
		<%=f.label :Domain%>
		<%=f.text_field :website%>
	  </div>
	  <div class="small-12 large-6 columns">
		
		<%=f.label "Address " %>
		<%=f.text_field :address%>
	  </div>
	</div>

	<div class="row">
	  <div class="small-12 large-6 columns">
		<%=f.label "Entity Type" %>
		<%=f.text_field :entity_type %>
	  </div>
	  <div class="small-12 large-6 columns">
		<%=f.label "Checkout Type" %>
		<%=f.text_field :checkout_type %>
	  </div>
	</div>
		
	<p>
		<%=f.label "1800 Phone Number" %>
		<%=f.text_field :'1800number'%>
	</p>


		<%=f.button :submit, :class => "small round button" %>

	<% end %>
</div>